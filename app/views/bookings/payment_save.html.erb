  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><strong>Summary</strong></h3>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-condensed">
              <thead>
                <tr>
                  <td><strong>Room</strong></td>
                  <td class="text-center"><strong>Price</strong></td>
                  <td class="text-center"><strong>Number of days</strong></td>
                  <td class="text-center"><strong>Check in</strong></td>
                  <td class="text-center"><strong>Check out</strong></td>
                  <td class="text-right"><strong>Totals</strong></td>
                </tr>
              </thead>
              <tbody>
                 <tr>
                  <% room = @booking.room %>
                  <td><%= room.name %></td>
                  <td class="text-center"><%=@booking.room.price%></td>
                  <td class="text-center"><%=(@booking.check_out - @booking.check_in)/1.day%></td>
                  <td class="text-center"><%=@booking.check_in.strftime('%Y-%m-%d')%></td>
                  <td class="text-center"><%=@booking.check_out.strftime('%Y-%m-%d')%></td>
                  <td class="text-right"><%=((@booking.check_out - @booking.check_in)/1.day)*room.price%>$</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <footer>We will call you soon, thanks you for booking</footer>
