<div class="container">
  <div class="row">
    <section class="content">
      <a href="../cms/rooms/new" class="btn btn-primary">New Room</a>
      <%= render 'form_find_rooms' %>
      <hr>
      <% if @rooms.present? %>
        <div class="col-md-10">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="pull-right">
              </div>
              <div class="table-container">
                <table class="table table-filter">
                  <tbody>
                    <%= render partial: "room_items", locals: {rooms: @rooms} %>
                  </tbody>
                </table>
                <%= paginate @rooms %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </section>
  </div>
</div>

