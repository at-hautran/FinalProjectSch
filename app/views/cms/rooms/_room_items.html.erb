<% rooms.each do |room| %>
<tr data-status="pendiente">
  <td>
    <div class="media">
      <a href="#" class="pull-left">
      <%= image_tag room.room_icon.thumb.url if room.room_icon.present? %>
      </a>
      <div class="media-body">
        <span class="pull-right pendiente">Price</span>
        <h4 class="title">
          <%= room.name %>
          <span class="media-meta pull-right"><%= room.price %>$</span>
        </h4>
      </div>
      <div>
        <div>adults: <%= room.adults%></div>
        <div>children: <%= room.childrens %></div>
      </div>
      <div>
      <% if current_user.user_type == 'Admin' %>
        <a href="../cms/rooms/<%=room.id%>" data-method="delete" class="btn btn-danger" style="float:right"><span class="glyphicon glyphicon-trash"></span>delete</a>
        <a href="../cms/rooms/<%=room.id%>/edit" class="btn btn-primary" style="float:right;"><span class="glyphicon glyphicon-edit"></span> Edit</a>
      <% end %>
      <% if current_user.user_type == 'Employee' %>
        <a href="../cms/bookings/new?room_id=<%=room.id%>" class="btn btn-info" style="float:right"><span class="glyphicon glyphicon-edit"></span>Book</a>
      <% end %>
      </div>
    </div>
    <hr>
  </td>
</tr>
<% end %>
