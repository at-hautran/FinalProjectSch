<body>
  <div class="container">
    <div class="row">
      <h2 class="text-center">Bookings changed history</h2>
    </div>
    <div class = "row">
      <div class = "col-md-2" style="margin: 30px">
        <select style="width: 75px" class="form-control" row="10">
          <option>25</option>
          <option>50</option>
          <option selected>100</option>
        </select>
      </div>
    </div>
    <!-- <div class = "row">
      User: <input type="text" name="username">
    </div> -->
    <div class="row">
      <div class="col-md-12">
        <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>booking_id</th>
              <th>User</th>
              <th>Content</th>
              <th>Action</th>
              <th>Change_at</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>booking_id</th>
              <th>User</th>
              <th>Content</th>
              <th>Action</th>
              <th>Change_at</th>
            </tr>
          </tfoot>
          <tbody>
            <% if @histories.present? %>
              <% @histories.each do |history| %>
                <tr>
                  <% user = history.user %>
                  <td><%= @booking.id %></td>
                  <td><%= user.present? ? user.username : "customer" %></td>
                  <td><%= history.audited_changes %></td>
                  <td><%= history.action %></td>
                  <td><%= history.created_at.strftime('%Y-%m-%d %I:%M:%S %p') %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</body>
</style>
<script type="text/javascript">
  $(document).ready(function() {
  $('#datatable').dataTable();

  $("[data-toggle=tooltip]").tooltip();

  } );

</script>

