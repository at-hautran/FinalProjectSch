<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
<div class="col-md-5">
  <form id ="update-bookings" action = "" method="post">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
      <h4 class="modal-title custom_align namepop" id="Heading">Edit Booking</h4>
    </div>
    <input type="hidden" name="_method" value="put" />
    <div class="modal-body">
      <lable>Name</lable>
      <div class="form-group">
        <input name= "name" class="form-control pop_customer_name" type="text" value="<%=@booking.customer.name %>" placeholder="Customer Name">
      </div>
      <lable>Phone number</lable>
      <div class="form-group">
        <input name="phonenumber" class="form-control pop_customer_phone" type="text" value="<%=@booking.customer.phonenumber%>" placeholder="Phone Number">
      </div>
      <lable>Email</lable>
      <div class="form-group">
        <input name="email" class="form-control pop_customer_email" type="text" value="<%= @booking.customer.email%>" placeholder="Email">
      </div>
      <lable>Country</lable>
      <div class="form-group">
        <input name="country" class="form-control pop_customer_country" type="text" value="<%=@booking.customer.country%>" placeholder="Country">
      </div>
      <lable>Room name</lable>
      <div class="form-group">
        <input name="room_name" class="form-control pop_room_name " type="text" value="<%=@booking.room.name%>" placeholder="Room name">
      </div>
      <lable>Check in</lable>
      <div class="form-group">
        <input name="check_in" class="form-control pop_check_in " type="date" value="<%=@booking.check_in.strftime("%Y-%m-%d")%>" placeholder="Check in">
      </div>
      <lable>Check out</lable>
      <div class="form-group">
        <input class="form-control pop_check_out " type="date" value="<%=@booking.check_out.strftime("%Y-%m-%d")%>" placeholder="Check out">
        <lable>Status</lable>
        <div class="form-group">
          <select name="status" value="@booking.status" class="form-control pop_status ">
          <%= options_for_select(ApplicationHelper::BOOKING_STATUS, "a")%>
          </select>
          <!-- <input class="form-control pop_status " type="text" placeholder="Status"> -->
        </div>
      </div>
      <div class="form-group"></div>
    </div>
    <div class="modal-footer ">
      <button type="submit" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
    </div>
  </form>
</div>
<!-- This below for search room suggest -->
<div class="col-md-7">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
    <h4 class="modal-title custom_align namepop" id="Heading">Edit Booking</h4>
  </div>
  <%= render 'find_empty_rooms' %>
  <div class="suggest_rooms_result"></div>
</div>
</body>
</html>