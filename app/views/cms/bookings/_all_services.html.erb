<table class="table table-bordered table-striped table-hover">
  <thead>
  <tr>
    <!-- <th width="100">Image</th> -->
    <th width="100">Name</th>
    <th width="200">Price</th>
    <th width="200">Time</th>
    <th width="200">Number</th>
    <th width="100">status</th>
    <th width="150">Action</th>
  </tr>
  </thead>
  <tbody>
  <% services.each do |service| %>
  <tr class = "b">
      <%= text_field_tag 'booking_id', @booking.id, type: :hidden, class: :booking_id %>
      <%= text_field_tag 'service_id', service.id, type: :hidden, class: :service_id %>
      <!-- <td><%= service_tag(service) %></td> -->
      <td><%= service.name%></td>
      <td><%= service.price%></td>
      <td>
        <input name="time" type='text' class="form-control time" id="datetimepicker<%= service.id %>", class= 'date_picker' />
      </td>
      <td><%= text_field_tag 'number', 1, type: :number, class: 'number form-control', width: "50%" %></td>
      <td>
        <div class="box" style="background: <%= Cms::ServicesHelper::STATUS_COLOR[service.status]%>; width: 60%; text-align: center;">
          <%= service.status%>
        </div>
      </td>
      <td>
        <%= link_to 'choose', '', disabled: service.close?,method: :post, class: 'get_link btn btn-warning btn-xs', remote: true, "data-type" => "script"%>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col-md-6">
    <%= paginate services %>
  </div>
</div>
<% services.each do |service| %>
<div class="container">
  <script type="text/javascript">
      $(function () {
          $("#datetimepicker<%=service.id%>").datetimepicker();
      });

      $(function() {
  return $('.get_link').click(function(ev) {
    var booking_id, number, service_id, time;
    booking_id = $(this).closest('.b').find('.booking_id').val();
    service_id = $(this).closest('.b').find('.service_id').val();
    number = $(this).closest('.b').find('.number').val();
    time = $(this).closest('.b').find('.time').val();
    return $(this).attr("href", "/cms/bookings/" + booking_id + "/create_services/" + service_id + "?number=" + number + "&time=" + time + "&format=js");
  });
});

// ---
// generated by coffee-script 1.9.2
  </script>
</div>
<% end %>