<%= form_tag cms_services_path, method: :get, class: 'form-horizontal form_search', remote: true do %>
<input type="hidden" value="<%= @booking.id %>" name="booking_id">
  <div class="form-group">
    <label class="col-md-2 control-label">Services name</label>
    <div class="col-md-4">
      <%= text_field_tag 'name', params[:search].present? ? params[:search][:check_in] : '', type: :text, class: 'form-control' %>
    </div>
    <div class="col-md-1">
      <input type="submit" class="btn btn-primary" value="Search">
    </div>
  </div>
  <hr/>
<% end %>