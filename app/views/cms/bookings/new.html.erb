<form action="/cms/bookings" onsubmit="return removeRemote()" method="post">
  <!--  General -->
  <div class="form-group">
    <h2 class="heading">Booking & contact</h2>
    <%= render partial: 'cms/errors/errors', locals: {errors: @booking.errors} if @booking.present? %>
    <%= render partial: 'cms/errors/flash' , locals: { flash: flash } if flash[:errors].present? %>
    <%= render partial: 'cms/success/flash' , locals: { flash: flash } if flash[:success].present? %>
    <div class="controls">
      <label for="name" class="top_negative active" style="top: -15px;">Name</label>
      <input type="text" class="floatLabel" name="customer[name]" placeholder="Name">
    </div>
    <div class="controls">
      <label for="customer[email]" class="active" style="top: -15px;">Email</label>
      <input type="text" id="email" class="floatLabel" name="customer[email]" placeholder="Email">
    </div>
    <div class="controls">
      <label for="phone" class="active" style="top: -15px;">Phone</label>
      <input type="tel" id="phone" class="floatLabel" name="customer[phonenumber]" placeholder="Phone">
    </div>
    <div class="grid">
      <div class="col-2-3">
        <div class="controls">
          <label for="street" class="active" style="top: -15px;">Street</label>
          <input type="text" id="street" class="floatLabel" name="customer[street]" placeholder="Street">
        </div>
      </div>
      <div class="col-1-3">
        <div class="controls">
          <input type="number" id="street-number" class="floatLabel" name="customer[number_street]" placeholder="Number">
          <label for="street-number" class="active" style="top: -15px;">Number</label>
        </div>
      </div>
    </div>
    <div class="grid">
      <div class="col-2-3">
        <div class="controls">
          <input type="text" id="city" class="floatLabel" name="customer[city]" placeholder="City">
          <label for="city" class="active" style="top: -15px;">City</label>
        </div>
      </div>
      <div class="col-1-3">
        <div class="controls">
          <input type="text" id="post-code" class="floatLabel" name="customer[postcode]" placeholder="Postcode">
          <label for="post-code" class="active" style="top: -15px;">Post Code</label>
        </div>
      </div>
    </div>
    <div class="controls">
      <input type="text" id="country" class="floatLabel" name="customer[country]" placeholder="Country">
      <label for="country" class="active" style="top: -15px;">Country</label>
    </div>
  </div>
  <!--  Details -->
  <div class="form-group">
    <!-- <h2 class="heading">Details</h2> -->
    <div class="grid">
      <div class="col-1-4 col-1-4-sm">
        <div class="controls">
          <input readonly="readonly" type="text" id="arrive" class="floatLabel" name="booking[room_name]" value="<%= @room.name if @room.present? %>">
          <label for="arrive" class="active" style="top: -15px;"><i class="fa fa-calendar"></i>&nbsp;&nbsp;Room</label>
        </div>
      </div>
    </div>

    <div class="grid">
      <div class="col-1-4 col-1-4-sm">
        <div class="controls">
          <input type="text" value="<%=params[:adults]%>" class="floatLabel" name="booking[adults]" placeholder="Adults">
          <label for="arrive" class="active" style="top: -15px;" class="label-date <%= 'active' if params[:adults].present? %>"><i class="fa fa-calendar"></i>&nbsp;&nbsp;Adults</label>
        </div>
      </div>
      <div class="col-1-4 col-1-4-sm">
        <div class="controls">
          <input type="text" value="<%=params[:childrens]%>" class="floatLabel" name="booking[childrens]" placeholder="Childrents" />
          <label for="depart" class="active" style="top: -15px;" class="label-date <%= 'active' if params[:childrens].present? %>"><i class="fa fa-calendar"></i>&nbsp;&nbsp;Childrents</label>
        </div>
      </div>
    </div>

    <div class="grid">
      <div class="col-1-4 col-1-4-sm">
        <div class="controls">
          <input type="date" value="<%=params[:check_in]%>" name="booking[check_in]" value="">
          <label style="top: -15px;"><i class="fa fa-calendar"></i>&nbsp;&nbsp;Check in</label>
        </div>
      </div>
      <div class="col-1-4 col-1-4-sm">
        <div class="controls">
          <input type="date" value="<%=params[:check_out]%>" name="booking[check_out]" />
          <label class="active" style="top: -15px;" ><i class="fa fa-calendar"></i>&nbsp;&nbsp;Check out</label>
        </div>
      </div>
    <!-- </div> -->

      <div class="controls">
      <%= text_field_tag "booking[room_id]", @room.id, type: :hidden%>
      </div>
      <button type="submit" value="Submit" class="col-1-4" onclick="removeRemote()">Submit</button>
  </div>
  <!-- /.form-group -->
</form>
<style type="text/css">
  .top_negative {
    top: -20px;
  }
</style>
<script type="text/javascript">
  function removeRemote(){
     $("form").removeAttr("data-remote");
  $("form").removeData("remote");
  }
</script>
