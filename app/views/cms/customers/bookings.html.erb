<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4>Bookings of customer email <%=@customer.email%></h4>
      <div class="table-responsive">
        <table id="mytable" class="table table-bordred table-striped">
          <thead>
            <th>Id</th>
            <th>Name</th>
            <th>phone</th>
            <th>Country</th>
            <th>Room</th>
            <th>Check in</th>
            <th>Check out</th>
            <th>Adults</th>
            <th>Childrens</th>
            <th>Status</th>
            <th>Exepter</th>
            <th>Edit</th>
            <th>Delete</th>
          </thead>
          <tbody>
            <% @bookings.each do |booking| %>
            <% customer = booking.customer %>
            <tr class = "closesst1">
              <td><%= booking.id %></td>
              <td class="name1"><%= customer.name %></td>
              <td><%= customer.phonenumber %></td>
              <td><%= customer.country %></td>
              <td><%= booking.room.name%></td>
              <td><%= booking.check_in.strftime("%Y/%m/%d") %></td>
              <td><%= booking.check_out.strftime("%Y/%m/%d") %></td>
              <td><%= booking.adults %></td>
              <td><%= booking.childrens %></td>
              <td><%= booking.status%></td>
              <td><%= booking.user.username if booking.user.present? %></td>
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Edit">
                  <button onclick="location.href='bookings/<%=booking.id%>/edit';" class="btn btn-primary btn-xs modalpop" data-title="Edit" >
                    <span class="glyphicon glyphicon-pencil">
                <div class = "a" value="a"></div>
                </span>
                </button
                  ></p>
              </td>
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="clearfix"></div>
        <%= paginate @bookings %>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
      </div>
      <div class="modal-body">
        <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>
      </div>
      <div class="modal-footer ">
        <button type="button" class="btn btn-success" ><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
