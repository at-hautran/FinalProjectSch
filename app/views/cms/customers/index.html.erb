<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 style="text-align: center;">Customers</h1>
      <div style="text-align: center;">
      <%= render 'form_find' %>
      </div>
      <div class="table-responsive">
        <table id="mytable" class="table table-bordred table-striped">
          <thead>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Country</th>
            <th>City</th>
            <th>Street</th>
            <th>Number Street</th>
            <!-- <th>Current booking</th> -->
            <th>Postcode</th>
            <th>Detail</th>
            <th>Edit</th>
            <th>Delete</th>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr class = "closesst1">
              <td><a href="/cms/customers/<%=customer.id%>"><%=customer.id%></a></td>
              <td><%=customer.name%></td>
              <td><%=customer.email%></td>
              <td><%=customer.phonenumber%></td>
              <td><%=Country[customer.country].name%></td>
              <td><%=customer.city%></td>
              <td><%=customer.street%></td>
              <td><%=customer.number_street%></td>
              <td><%=customer.postcode%></td>
              <td><%= link_to("detail", cms_customer_path(customer.id)) %></td>
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Edit">
                  <button onclick="location.href='customers/<%=customer.id%>/edit';" class="btn btn-primary btn-xs modalpop" data-title="Edit" >
                    <span class="glyphicon glyphicon-pencil">
                <div class = "a" value="a"></div>
                </span>
                </button
                  ></p>
              </td>
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @customers, window: 2, outer_window: 1 %>
        <div class="clearfix"></div>
        <%= %>
      </div>
    </div>
  </div>
</div>